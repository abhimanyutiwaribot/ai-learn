{
  "manifest_version": 3,
  "name": "AI Learn - AI-Powered Smart Assistant",
  "version": "1.0.0",
  "description": "First voice reader that understands what it's reading. AI-powered accessibility for students with learning differences.",
  "key": "YOUR_EXTENSION_KEY",
  "trial_tokens": [
    "YOUR_TRIAL_TOKEN_1",
    "YOUR_TRIAL_TOKEN_2"
  ],
  "permissions": [ 
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "notifications",
    "tts",
    "languageModel",
    "sidePanel"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils/wcag-checker.js",
        "utils/profile-sync.js",
        "accessibility-engine.js",
        "reading-assistant.js",
        "voice-reader.js",
        "content.js"
      ],
      "css": [
        "styles/overlay.css",
        "styles/accessibility.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://docs.google.com/*"
      ],
      "js": [
        "google-docs-adapter.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "assets/audio/*.mp3",
        "multimodal-handler.js",
        "pdf-processor.js",
        "proofreader-handler.js",
        "sidepanel.html",
        "sidepanel.js",
        "sidepanel.css",
        "tutorial.html",
        "tutorial.css",
        "tutorial.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      }
    },
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open Accessibility Side Panel"
    },
    "read-aloud": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Read selected text aloud"
    },
    "simplify-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Simplify selected text"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
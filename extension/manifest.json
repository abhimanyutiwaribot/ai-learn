{
  "manifest_version": 3,
  "name": "ChromeAI Plus - AI-Powered Accessibility Assistant",
  "version": "1.0.0",
  "description": "First voice reader that understands what it's reading. AI-powered accessibility for students with learning differences.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "notifications",
    "tts",
    "languageModel"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/wcag-checker.js",
        "utils/profile-sync.js",
        "accessibility-engine.js",
        "reading-assistant.js",
        "voice-reader.js",
        "content.js"
      ],
      "css": [
        "styles/overlay.css",
        "styles/accessibility.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://docs.google.com/*"],
      "js": ["google-docs-adapter.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "assets/audio/*.mp3",
        "multimodal-handler.js",
        "pdf-processor.js",
        "proofreader-handler.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      }
    },
    "simplify-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Simplify selected text"
    },
    "read-aloud": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Read selected text aloud"
    },
    "screenshot-analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Analyze screenshot with AI"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
